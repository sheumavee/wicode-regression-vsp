extends ../layout


block content
  h1 Transaction Test
  p.lead Scan or enter wiCode on Retailer Point of Sale.
  hr
  .row
    .col-md-6
      h3(style="text-align: center") wiCode
      div.d-flex.justify-content-center#qrCodeDiv
      br
      h2#wiCodeText(style="color: red; text-align: center") #{wiCodePlatformResponse.token.wiCode}
    .col-md-6
      h3(style="text-align: center")  Transaction Processing Logs
      img.img-thumbnail.border-0.rounded.mx-auto.d-block(src='../img/loading.gif', height='100px', width='100px')
      p(style="text-align: center") Transaction ID:
      p#trxId(style="color: red; text-align: center") #{trxId}
      p#logParagraph
        a.btn.btn-primary.brn-lg.btn-block(href='#', role='button') Done
        
